<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
   <table name="applab_subscriptions" resource="default" comment="Table to save all subscription orders">
       <column xsi:type="int" name="id" padding="10" identity="true" unsigned="true" nullable="false" comment="Id"/>
       <column xsi:type="int" name="store_id" nullable="false"  comment="store ID"/>
       <column xsi:type="int" name="order_id" nullable="false"  comment="order ID"/>
       <column xsi:type="int" name="order_inc_id" nullable="false"  comment="order increment ID"/>
       <column xsi:type="int" name="customer_id" nullable="false"  comment="customer ID"/>
       <column xsi:type="varchar" name="customer_name" nullable="true" length="255" comment="customer name"/>
       <column xsi:type="varchar" name="customer_email" nullable="true" length="255" comment="customer email"/>
       <column xsi:type="int" name="product_id" nullable="true"  comment="product ID"/>
       <column xsi:type="varchar" name="product_sku" nullable="true"  comment="product SKU"/>    
       <column xsi:type="varchar" name="subscription_type" nullable="true" length="255" comment="subscription_type"/>
       <column xsi:type="timestamp" name="subscription_start" nullable="true" comment="subscription start date"/>
       <column xsi:type="timestamp" name="subscription_end" nullable="true" comment="subscription end date"/>
       <column xsi:type="longtext" name="shipment_dates" nullable="true" comment="shipment dates"/>
       <column xsi:type="int" name="shipment_count" nullable="true"  comment="shipment count"/>
       <column xsi:type="varchar" name="status" nullable="false" default="In progress" comment="status"/>
       <column xsi:type="timestamp" name="created_at" on_update="false" nullable="true" comment="Created At"/>
       <constraint xsi:type="primary" referenceId="PRIMARY">
           <column name="id"/>
       </constraint>
   </table>
</schema>